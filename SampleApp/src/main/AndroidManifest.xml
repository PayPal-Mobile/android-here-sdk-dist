<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paypal.heresdk.sampleapp"
    android:versionCode="16"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SDK.Base" >

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".ui.ReaderConnectionActivity"
            android:label="@string/title_activity_reader_connection"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".ui.ChargeActivity"
            android:label="@string/title_activity_charge"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".ui.RefundActivity"
            android:label="@string/title_activity_charge"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".ui.AuthCaptureActivity"
            android:label="AuthCaptureActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".ui.CaptureActivity"
            android:label="CaptureActivity"
            android:windowSoftInputMode="stateVisible"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".ui.WebViewActivity"
            android:label="WebViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.PaymentOptionsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.OfflinePayActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.OfflinePaySuccessActivity"></activity>
        <activity
            android:name=".ui.VaultActivity"
            android:label="@string/title_activity_vault"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>

    </application>

</manifest>