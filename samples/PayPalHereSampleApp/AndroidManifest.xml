<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.paypal.sampleapp"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="9"
            android:targetSdkVersion="17"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.paypal.sampleapp.activity.SplashScreenActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.LoginScreenActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/login_screen">

        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.OAuthLoginActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/login_screen"
                android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.BillingTypeTabActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/billing_type">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.ItemizedActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.FixedPriceActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.PaymentTypeTabActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/payment_type">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.CreditCardPeripheralActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/card_reader_payment">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.CreditCardManualActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/key_in_payment">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.PayPalMerchantCheckinActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/checkin_payment">
        </activity>

        <activity
                android:name="com.paypal.sampleapp.activity.SignatureActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        </activity>
        <activity
                android:name="com.paypal.sampleapp.activity.OptionsMenuBaseActivity"
                android:label="@string/app_name">
        </activity>

        <activity
                android:name="com.paypal.sampleapp.activity.BluetoothDeviceFinderActivity"
                android:label="@string/app_name"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        </activity>
        <activity android:name="com.paypal.sampleapp.activity.EMVOnlyActivity"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"/>

        <activity android:name=".activity.StageSelectActivity"
                  android:label="@string/select_stage"
                  android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"/>

    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

</manifest>